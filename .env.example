# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DB_NAME=secure_vault
DB_SSLMODE=require

# Security Configuration (CRITICAL - CHANGE THESE!)
JWT_SECRET=CHANGE_ME_minimum_32_characters_or_more_here
ENCRYPTION_KEY=CHANGE_ME_EXACTLY_32_CHARACTERS  # Must be exactly 32 bytes
TOKEN_EXPIRATION=24  # hours

# AWS KMS Configuration
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your-kms-key-id-here
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Alternative: Azure Key Vault
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_redis_password
REDIS_DB=0

# Object Storage (S3-compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=secure-vault-documents
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Audit Database (Separate from main DB)
AUDIT_DB_HOST=localhost
AUDIT_DB_PORT=5433
AUDIT_DB_USER=audit_user
AUDIT_DB_PASSWORD=CHANGE_ME_audit_password
AUDIT_DB_NAME=secure_vault_audit

# MFA Configuration
MFA_ISSUER=SecureVault
MFA_REQUIRED=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=development  # development, staging, production